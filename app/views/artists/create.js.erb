$("#artist-show").html('<%= j render "artists/cards/select_form", form_id: "artist-show-form-id" %>').find("option[value='<%= @artist.id %>']").attr("selected", true);
$("#artist-form").html('<%= j render "artists/cards/form", artist: @artist, form_id: "artist-edit-form-id" %>').toggleClass("show");
$("#item_type-new").html('<%= j render "item_types/forms/form", artist: @artist, item_type: ItemType.new, form_id: "item_type-new-form-id" %>').find(":text, :submit").prop("disabled", false);
$("#item_type-new").find(".input-group").toggleClass("bg-white bg-disabled");
