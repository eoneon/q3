<% if @artist.present? %>
  $("#<%= @form_id %>").html('<%= j render "artists/cards/select_form", form_id: @form_id %>').find("option[value='<%= @artist.id %>']").attr("selected", true);
  $("#artist-form").html('<%= j render "artists/cards/form", artist: @artist, form_id: "artist-edit-form-id" %>');
  $("#item_type-new").html('<%= j render "item_types/forms/form", artist: @artist, item_type: ItemType.new, form_id: "item_type-new-form-id" %>').find(":text, :submit").prop("disabled", false);
  $("#item_type-new").find(".input-group").toggleClass("bg-white bg-disabled");
  $("#item_type-tab-index").html('<%= j render "artists/cards/tabs", artist: @artist %>');
<% else %>
  $("#<%= @form_id %>").html('<%= j render "artists/cards/select_form", form_id: @form_id %>').find("option").attr("selected", false);
  $("#artist-form").html('<%= j render "artists/cards/form", artist: Artist.new, form_id: "artist-new-form-id" %>');
  $("#item_type-new").html('<%= j render "item_types/forms/form", artist: @artist, item_type: ItemType.new, form_id: "item_type-new-form-id" %>').find(":text, :submit").prop("disabled", true);
  $("#item_type-index").remove();
<% end %>
