<%= form_with model: artist, url: artist, id: form_id do |f| %>
  <div class="form">
    <%= hidden_field_tag :form_id, form_id %>
    <% %w[first_name last_name years].each do |field| %>
      <%= f.fields_for :properties, OpenStruct.new(artist.properties) do |ff| %>
        <%= ff.text_field field, placeholder: field, class: "form-control" %>
      <% end %>
    <% end %>
    <%= f.number_field :admin_id, placeholder: "artist-id", class: "form-control" %>
    <button class="btn btn-sm badge badge-primary float-right" type="submit">
      Submit
    </button>
  </div>
<% end %>
