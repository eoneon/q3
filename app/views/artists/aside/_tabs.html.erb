<% artists.each do |artist| %>
  <% if artist.sort == 1 %>
    <a class="list-group-item list-group-item-action active" id="list-<%= artist.id %>-list" href="<%= artist_path(artist) %>" data-remote="true" data-toggle="list">
      <%= artist.name %>
    </a>
  <% else %>
    <a class="list-group-item list-group-item-action" id="list-<%= artist.id %>-list" href="<%= artist_path(artist) %>" data-remote="true" data-toggle="list">
      <%= artist.name %>
    </a>
  <% end %>
<% end %>
