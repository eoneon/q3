<h1>Field Names</h1>

<h4>Export Fields</h4>
<p>
  Download:
  <%= link_to "CSV", fields_path(format: "csv") %>
  <%= link_to "Excel", fields_path(format: "xls") %>
</p>

<h4>Import Fields</h4>
<%= form_tag import_fields_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<br>

<%= link_to 'New Field', new_field_path %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>field type</th>
    </tr>
  </thead>
  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.id %></td>
        <td><%= field.name %></td>
        <td><%= field.field_type %></td>
        <td><%= link_to 'show', field_path(field) %> | <%= link_to 'Edit', edit_field_path(field) %> | <%= link_to 'Delete', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
