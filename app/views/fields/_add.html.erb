<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-new-target', klass: fieldable, child_klass: 'field_group') %>" data-parent=".<%= dynamic_id(name: 'accordion-field-menu', klass: fieldable, child_klass: 'field') %>">
  <div class="card card-body p-3 bg-light">
    <div>
      <span class="card-title font-weight-light">Associate Existing Field</span>
      <button type="button" class="close float-right close-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-new-render', klass: fieldable, child_klass: 'field_group') %>">
      <%= render 'field_groups/form', fieldable: fieldable, field_group: FieldGroup.new, form_id: dynamic_id(name: 'form-add', klass: fieldable, child_klass: 'field') %>
    </div>
  </div>
</div>
