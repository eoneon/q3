<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-new-target', klass: fieldable, child_klass: 'field') %>" data-parent=".<%= dynamic_id(name: 'accordion', klass: fieldable, child_klass: 'field') %>">
  <div class="card card-body p-3 bg-light">
    <div>
      <span class="card-title font-weight-light">New field</span>
      <button type="button" class="close float-right close-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-new-render', klass: fieldable, child_klass: 'field') %>">
      <%= render "fields/form", fieldable: fieldable, field: Field.new %>
    </div>
  </div>
</div>
