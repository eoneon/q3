<h1>Field: <%= @field.name %></h1>

<%= link_to 'Edit field', @field.dynamic_edit(request.path, params) %> |
<%= link_to 'field index', @field.dynamic_index(request.path, params) %>

<h4>New Value</h4>

<p><%= link_to "New Value", new_field_value_path(@field) %></p>

<table class="table table-striped table-hover">
  <thead>
    <th>ID</th>
    <th>Item field value</th>
  </thead>
  <tbody>
    <% @field.values.each do |value| %>
      <tr>
        <td><%= value.id %></td>
        <td><%= value.name %></td>
        <td><%= link_to 'edit', edit_field_value_path(@field, value) %> | <%= link_to 'Delete', [@field, value], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
