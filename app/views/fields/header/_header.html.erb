<small class="ml-5 my-0 py-0 form-text text-muted input-label">Edit Field</small>
<div class="row justify-content-between align-items-center bg-light" id="<%= dom_ref(field, 'header') %>">
  <button class="caret-toggle btn btn-lg bg-transparent pl-2 border py-0" id="" data-toggle="collapse" data-target="#<%= dom_ref(field, 'body') %>" type="button" aria-expanded="false"><%= (fa_icon "caret-right") %></button>

  <ul class="nav ml-3 mr-0">
    <li class="nav-item-dropdown">
      <a class="nav-link dropdown bg-transparent text-info m-0 p-0 border" id="" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= (fa_icon "ellipsis-v") %></a>
      <%= render "fields/header/dropdown_menu", field: field %>
    </li>
  </ul>

  <div class="col" id="<%= dom_ref(field, 'accordion') %>">
    <div class="collapse show toggle-sibling" id="<%= dom_ref(field, 'edit') %>" data-label="Edit Field" data-parent="#<%= dom_ref(field, 'accordion') %>">
      <%= render "fields/forms/form", field: field, url: field, form_id: dom_ref(field, 'edit-form-id') %>
    </div>

    <div class="collapse toggle-sibling" id="<%#= dom_ref(field, 'value-new') %>" data-label="New Value" data-parent="#<%= dom_ref(field, 'accordion') %>">
      <%#= render "values/forms/form", field: field, value: Value.new, form_id: dom_ref(field, 'value-new-form-id')  %>
    </div>
  </div>

  <div class="col-1">
    <div class="row align-items-center">
      <div class="col mx-2 p-0">
        <%#= render "fields/sort_btn_group", fieldable: fieldable, field: field %>
      </div>
      <div class="col p-0">
        <%#= render "fields/header/delete_menu", fieldable: fieldable, field: field %>
        <%= link_to (fa_icon "times"), field_path(field), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "delete-btn btn btn-sm btn-transparent text-danger pl-0 ml-0 disabled" %>
      </div>
    </div>
  </div>
</div>
