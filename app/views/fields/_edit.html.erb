<%= form_with model: field, url: [fieldable, field], id: :field_form do |f| %>
  <div class="form">
    <div class="form-group">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <button class="btn btn-md btn-outline-primary" type="submit">
          Submit
        </button>
      </div>
      <%= f.select :field_type, options_for_select(%w[text_field check_box number_field text_area]), {prompt: "- select field type -"}, class: "form-control" %>
      <%= f.text_field :name, placeholder: "enter field name", class: "form-control" %>
      <%#= render "layouts/flash" %>
      </div>
    </div>
  </div>
<% end %>
