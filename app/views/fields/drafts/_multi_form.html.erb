<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-new-target', klass: sub_category.categorizable, child_klass: 'field') %>" data-parent="#<%= dynamic_id(name: 'accordion', klass: category, child_klass: 'sub_category') %>">
  <div class="card card-body p-1 bg-light">
    <div>
      <span class="card-title">New field</span>
      <button type="button" class="close float-right close-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-new-render', klass: sub_category.categorizable, child_klass: 'field') %>">
      <%= render "fields/form", fieldable: sub_category.categorizable, field: Field.new %>
    </div>
  </div>
</div>

