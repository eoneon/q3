<small class="ml-5 my-0 py-0 form-text text-muted input-label">Edit Element Kind</small>
<div class="row justify-content-between align-items-center bg-light">
  <button class="caret-toggle btn btn-lg bg-transparent pl-2 border py-0" data-toggle="collapse" data-target="#<%= dom_ref(element_kind, 'body') %>" type="button" aria-expanded="false"><%= (fa_icon "caret-right") %></button>

  <ul class="nav ml-3 mr-0">
    <li class="nav-item-dropdown">
      <a class="nav-link dropdown bg-transparent text-info m-0 p-0 border" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= (fa_icon "ellipsis-v") %></a>
      <%= render "element_kinds/header/dropdown_menu", element_kind: element_kind %>
    </li>
  </ul>

  <div class="col" id="<%= dom_ref(element_kind, 'accordion') %>">
    <div class="collapse show toggle-sibling" id="<%= dom_ref(element_kind, 'edit') %>" data-label="Edit Element Kind" data-parent="#<%= dom_ref(element_kind, 'accordion') %>">
      <%= render "element_kinds/forms/form", element_kind: element_kind, url: element_kind, form_id: dom_ref(element_kind, 'edit-form-id') %>
    </div>

    <div class="collapse toggle-sibling" id="<%= dom_ref(element_kind, 'element-new') %>" data-label="New Element" data-parent="#<%= dom_ref(element_kind, 'accordion') %>">
      <%= render "elements/forms/form", element_kind: element_kind, element: Element.new, form_id: dom_ref(element_kind, 'element-new-form-id') %>
    </div>

    <!-- <div class="collapse toggle-sibling" id="<%#= dom_ref(element_kind, 'field-new') %>" data-label="New Field" data-parent="#<%#= dom_ref(element_kind, 'accordion') %>">
      <%#= render "fields/forms/form", fieldable: element_kind, field: Field.new, url: polymorphic_url([element_kind, :poly_fields]), form_id: dom_ref(element_kind, 'field-new-form-id') %>
    </div>

    <div class="collapse toggle-sibling" id="<%#= dom_ref(element_kind, 'field_group-add') %>" data-label="Add Field" data-parent="#<%#= dom_ref(element_kind, 'accordion') %>">
      <%#= render 'field_groups/forms/form', fieldable: element_kind, field_group: FieldGroup.new, form_id: dom_ref(element_kind, 'field_group-add-form-id') %>
    </div> -->
  </div>

  <div class="col-1">
    <div class="row align-items-center">
      <div class="col mx-2 p-0">
        <%#= render "element_kinds/header/sorter", elementable: elementable, element_kind: element_kind %>
      </div>
      <div class="col p-0">
        <!-- <%#= link_to (fa_icon "times"), field_value_path(field_group.field, value, dom_ref: dom_ref(field_group, 'show')), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "delete-btn btn btn-sm btn-transparent text-danger pl-0 ml-0 disabled" %> -->
        <%= link_to (fa_icon "times"), element_kind_path(element_kind), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "delete-btn btn btn-sm btn-transparent text-danger pl-0 ml-0 disabled" %>
      </div>
    </div>
  </div>
</div>
