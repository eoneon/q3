<div class="input-group input-group-sm align-items-center bg-disabled">
  <%= hidden_field_tag :form_id, form_id %>
  <button class="btn btn-sm rounded-circle bg-transparent toggle-input-access" type="button"><%= (fa_icon "toggle-off") %></button>
  <%= f.text_field :name, placeholder: "enter element-kind name", class: "form-control", disabled: true %>
  <%= f.text_field :kind, placeholder: "enter element-kind type", class: "form-control border-secondary border-left pl-3", disabled: true %>
  <button class="btn btn-sm bg-transparent rounded-circle text-primary" type="submit" disabled><%= (fa_icon "plus-circle") %></button>
</div>
