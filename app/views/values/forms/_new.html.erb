<div class="card card-body p-3 bg-light">
  <div>
    <span class="card-title font-weight-light"><small>New Value</small></span>
    <button class="close float-right pr-4" type="button" data-toggle="collapse" data-target="#<%= dyno_id(n1: 'field_group', k1: field_group, n2: 'value', tag: 'new') %>" aria-expanded="false">
      <span aria-hidden="true"><small>&times;</small></span>
    </button>
  </div>
  <div id="<%= dyno_id(n1: 'field_group', k1: field_group, n2: 'value', tag: 'new-form') %>">
    <%= render "values/forms/form", field: field_group.field, value: Value.new, form_id: dyno_id(n1: 'field_group', k1: field_group, n2: 'value', tag: 'new-form-id'), tag: 'new'  %>
  </div>
</div>
