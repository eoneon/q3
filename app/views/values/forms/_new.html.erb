<div class="card card-body p-3 bg-light">
  <div>
    <span class="card-title font-weight-light">New Value</span>
    <button type="button" class="close float-right close-form">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div id="<%= dynamic_id(name: 'form-new-render', klass: field_group, child_klass: 'value') %>">
    <%= render "values/forms/form", field: field_group.field, value: Value.new, form_id: dynamic_id(name: 'form-new', klass: 'value', child_klass: nil)  %>
  </div>
</div>
