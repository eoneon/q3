<div class="card-body p-3 bg-light">
  <div>
    <span class="card-title font-weight-light"><small>Edit properties</small></span>
    <button class="close float-right pr-4" type="button" data-toggle="collapse" data-target="#<%= dyno_id(n1: 'field_group', k1: field_group, n2: 'value', k2: value, tag: 'edit-properties') %>" aria-expanded="false">
      <span aria-hidden="true"><small>&times;</small></span>
    </button>
  </div>
  <div id="<%= dyno_id(n1: 'field_group', k1: field_group, n2: 'value', k2: value, tag: 'edit-properties-form') %>">
    <%= render "values/forms/form", field: field_group.field, value: value, form_id: dyno_id(n1: 'field_group', k1: field_group, n2: 'value', k2: value, tag: 'edit-properties-form-id'), tag: 'properties' %>
  </div>
</div>
