<small class="ml-5 py-0 form-text text-muted input-label">Edit Value</small>
<!-- <%#= dom_ref(value, 'header') %> -->
<div class="row justify-content-between align-items-center bg-light" id="">
  <button class="caret-toggle btn btn-lg bg-transparent mr-3 px-3 border py-0" id="" data-toggle="collapse" data-target="#<%= dom_ref(field_group, value, 'edit-properties') %>" type="button" aria-expanded="false"><%= (fa_icon "caret-right") %></button>
  <div class="col">
    <div id="<%= dom_ref(field_group, value, 'name-edit') %>">
      <%= render "values/forms/form", field: field_group.field, value: value, form_id: dom_ref(field_group, value, 'name-edit-form-id') %>
    </div>
  </div>

  <div class="col-1 border align-item-center">
    <a href="<%= field_value_path([field_group.field, value]) %>" data-method="delete" data-path="" data-remote="true" data-confirm="Are you sure?" class="delete-btn btn btn-sm btn-transparent text-danger pl-0 ml-0 disabled" role="button"><%= (fa_icon "times") %></a>
  </div>
</div>
