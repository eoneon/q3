<% field.values.each do |value| %>
  <div class="card">
    <div class="card-header">
      <div class="row align-items-center">

        <div class="col mb-0" id="value-name-<%= value.id %>">
          <%= render 'values/value/value_name', value: value %>
        </div>

        <div class="col-auto">
          <%= render "values/value/drop_down", field_group: field_group, field: field, value: value %>
        </div>

      </div>

      <div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-edit-target', klass: field_group, child_klass: value) %>" data-parent="#accordion-field-<%= field.id %>-values">
        <div class="card card-body p-1 bg-light">
          <div>
            <span class="card-title">Edit Value</span>
            <button type="button" class="close float-right close-form">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div id="<%= dynamic_id(name: 'form-edit-render', klass: field_group, child_klass: value) %>">
            <%= render "values/form", field: field, value: value %>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>
