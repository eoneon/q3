<!DOCTYPE html>
<html>
  <head>
    <title>Q3</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <nav class="fixed-top navbar navbar-expand" id="nav-bar">
        <span>
          <%= render "layouts/nav_menu" %>
        </span>
        <a href="<%= categories_path %>" class="nav-link text-white">
          Categories
        </a>
        <a href="<%= artists_path %>" class="nav-link text-white">
          Artists
        </a>
        <a href="<%= suppliers_path %>" class="nav-link text-white">
          Suppliers
        </a>
      </nav>
      <%= yield %>
    </div>
    <script>
      function toggleEditForm(form_id){
        var value_form = document.getElementById(form_id);
        var input_name = value_form.getElementsByClassName('edit-name')[0];
        var submit_btn = value_form.getElementsByClassName('submit-value')[0];
        if (input_name.readOnly == true) {
          input_name.readOnly = false;
          submit_btn.disabled = false;
        } else {
         input_name.readOnly = true;
         submit_btn.disabled = true;
        }
      }
    </script>
  </body>
</html>
