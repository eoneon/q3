<!DOCTYPE html>
<html>
  <head>
    <title>Q3</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav">
        <li class="nav-link"><%= link_to "Categories", categories_path %></li>
        <!-- <li class="nav-link"><%#= link_to "Items", items_path %></li> -->
        <li class="nav-link"><%= link_to "Fields", fields_path %></li>
        <!-- <li class="nav-link"><%#= link_to "Values", field_values_path %></li> -->
      </ul>
      <div class="flash">
        <% if flash[:notice] %>
           <div class="alert alert-success">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash[:notice] %>
           </div>
         <% elsif flash.now[:alert] %>
           <div class="alert alert-danger">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash.now[:alert] %>
           </div>
         <% elsif flash[:alert] %>
           <div class="alert alert-warning">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash[:alert] %>
           </div>
         <% end %>
       </div>
    <%= yield %>
  </body>
</html>
