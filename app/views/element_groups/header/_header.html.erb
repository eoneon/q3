<div class="row align-items-center">
  <div class="col-auto">
    <h5 class="mb-0">
      <%= render "element_groups/header/collapse", element_group: element_group %>
    </h5>
  </div>

  <div class="col" id="<%= dynamic_id(name: 'name-render', klass: element_group.element_kind, child_klass: nil) %>">
    <%= render "element_groups/header/element_kind_name", element_kind: element_group.element_kind %>
  </div>

  <div class="col-auto">
    <%= render "element_groups/header/nav_menu", elementable: elementable, element_group: element_group %>
  </div>

  <div class="btn-group-vertical">
    <div class="btn btn-sm py-0" role="group">
      <%= render 'element_groups/header/sorter', elementable: elementable, element_group: element_group %>
    </div>
  </div>
</div>
