<small class="ml-5 my-0 py-0 form-text text-muted input-label">Edit Element</small>
<div class="row justify-content-between align-items-center bg-light">
  <button class="caret-toggle btn btn-lg bg-transparent pl-2 border py-0" data-toggle="collapse" data-target="#<%= dom_ref(element, 'body') %>" type="button" aria-expanded="false"><%= (fa_icon "caret-right") %></button>

  <ul class="nav ml-3 mr-0">
    <li class="nav-item-dropdown">
      <a class="nav-link dropdown bg-transparent text-info m-0 p-0 border" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= (fa_icon "ellipsis-v") %></a>
      <%= render "elements/header/dropdown_menu", element: element %>
    </li>
  </ul>

  <div class="col" id="<%= dom_ref(element, 'accordion') %>">
    <div class="collapse show toggle-sibling" id="<%= dom_ref(element, 'edit') %>" data-label="Edit Element" data-parent="#<%= dom_ref(element, 'accordion') %>">
      <%= render "elements/forms/form", poly_element: poly_element, element: element, form_id: dom_ref(element, 'edit-form-id') %>
    </div>

    <div class="collapse toggle-sibling" id="<%= dom_ref(element, 'field-new') %>" data-label="New field for: <%= element.name %>" data-parent="#<%= dom_ref(element, 'accordion') %>">
      <%= render "fields/forms/form", fieldable: element, field: Field.new, url: polymorphic_url([element, :poly_fields]), form_id: dom_ref(element, 'field-new-form-id') %>
    </div>

    <div class="collapse toggle-sibling" id="<%= dom_ref(element, 'field_group-add') %>" data-label="Add field for: <%= element.name %>" data-parent="#<%= dom_ref(element, 'accordion') %>">
      <%= render 'field_groups/forms/form', fieldable: element, field_group: FieldGroup.new, form_id: dom_ref(element, 'field_group-add-form-id') %>
    </div>
  </div>

  <div class="col-1">
    <div class="row align-items-center">
      <div class="col mx-2 p-0">
        <%= render "element_joins/sorter", poly_element: poly_element, element_join: element.element_joins.first %>
      </div>
      <div class="col p-0">
        <%= link_to (fa_icon "times"), [poly_element, element.element_joins.first], method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-transparent text-danger delete-btn px-0 disabled" %>
      </div>
    </div>
  </div>
</div>
