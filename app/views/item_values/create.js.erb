$("#<%= dom_ref(@form_id) %>").replaceWith("<%= j render 'item_values/forms/new', item_value: ItemValue.new, form_id: @form_id %>");
$("#show-card").html("<%= j render 'item_values/show', item_value: @item_value %>");
var form = $("#search-form");
var idx = $(form).find(".form").attr("data-search");
//needs to happen before we submit form
$(form).html("<%= j render 'search_values/form' %>");
$(form).find(".form").attr("data-search", idx);
$(form).find('select option').eq(idx).attr('selected', true);

$(form).submit();
