<div class="form-row align-items-center">
  <div class="input-group input-group-sm align-items-center <%= dom_attr(form_id, ['bg-white', 'bg-disabled'], 'new') %>">
    <% if dom_cond(form_id, 'edit') %>
      <button class="btn btn-sm rounded-circle bg-transparent <%= dom_attr(form_id, 'toggle-input-access', 'edit') %>" type="button" id="<%= new_dom_ref(form_id, 'form', 'btn') %>"><%= (fa_icon "toggle-off") %></button>
    <% end %>
    <%= f.text_field :name, placeholder: "enter item-value name", class: "form-control ml-2", disabled: true %>
    <%= f.select :type, options_for_select(sti_sibs_classified(:item_value), selected: item_value.type), {prompt: "- select product-part type -"}, {class: "form-control border-0", disabled: true} %>
    <button class="btn btn-sm bg-transparent rounded-circle text-primary" type="submit" disabled><%= (fa_icon "plus-circle") %></button>
  </div>
</div>
