<div class="row align-items-center justify-content-between bg-light">
  <div class="col-auto px-0 mr-0">
    <%= render "item_groups/item_fields/sort_btn_group", origin: origin, item_group: item_group, obj_ref: obj_ref %>
  </div>
  <div class="col-10 px-0 mx-0">
    <%= render "item_fields/forms/form", item_field: item_field, url: product_part_item_field_path(origin, item_field), target: item_field, obj_ref: obj_ref, form_id: dom_ref(obj_ref, 'edit-form') %>
  </div>

  <div class="col-1 pl-0">
    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group align-items-center" role="group">
        <button class="btn bg-transparent text-info control-toggle" id="<%= dom_ref(obj_ref, 'control-toggle') %>" data-toggle="collapse" data-target="#<%= dom_ref(obj_ref, 'parent-toggle') %>" type="button" aria-expanded="false"><%= (fa_icon "ellipsis-v") %></button>
        <%= button_to item_field_item_group_path(item_field, item_group, obj_ref: obj_ref), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "btn btn-sm bg-transparent font-weight-light text-danger pl-0" do %>
          <span><%= (fa_icon "minus-square") %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="form-row collapse pl-2 align-items-center parent-toggle" id="<%= dom_ref(obj_ref, 'parent-toggle') %>">
  <div class="col collapse show btn-group-toggle" id="<%= dom_ref(obj_ref, "btn-group-toggle") %>">
    <%= render "item_fields/forms/nested_form_toggle", item_field: item_field, obj_ref: dom_ref(obj_ref, item_field.sti_value_type), target: to_snake(item_field.sti_value_type) %>
  </div>
  <%= render "item_fields/forms/nested_forms", item_field: item_field, obj_ref: dom_ref(obj_ref, item_field.sti_value_type), target: to_snake(item_field.sti_value_type) %>
</div>
