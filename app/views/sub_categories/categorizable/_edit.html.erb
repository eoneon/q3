<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-edit-target', klass: sub_category, child_klass: sub_category.categorizable) %>" data-parent="#<%= dynamic_id(name: 'accordion', klass: category, child_klass: 'sub_category') %>">
  <div class="card card-body p-3 bg-light">
    <div>
    <span class="card-title font-weight-light"><%= categorizable_label(sub_category, "Edit") %></span>
    <button type="button" class="close float-right close-form">
      <span aria-hidden="true">&times;</span>
    </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-edit-render', klass: sub_category, child_klass: sub_category.categorizable) %>">
      <%= render "#{kollection_name(sub_category.categorizable)}/form", category: category, categorizable: sub_category.categorizable %>
    </div>
  </div>
</div>
