<% category.sub_categories.order(:sort).each do |sub_category| %>
  <div class="card">
    <div class="card-header">
      <div class="row align-items-center">

        <div class="col-auto">
          <h5 class="mb-0">
            <%= render "sub_categories/sub_category/toggle_icon", category: category, sub_category: sub_category %>
          </h5>
        </div>

        <div class="col" id="sub_category-name-<%= sub_category.id %>">
          <%= render 'sub_categories/sub_category/sub_category_name', sub_category: sub_category %>
        </div>

        <div class="col-auto">
          <%= render "sub_categories/sub_category/dropdown", category: category, sub_category: sub_category %>
        </div>

        <div class="btn-group-vertical">
          <div class="btn py-0" role="group">
            <%= render 'sub_categories/sub_category/sorter', category: category, sub_category: sub_category %>
          </div>
        </div>

      </div>
    </div>
  </div>
<% end %>
