<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-add-target', klass: category, child_klass: klass_name(categorizable)) %>" data-parent="#<%= dynamic_id(name: 'accordion-form-new', klass: klass_name(categorizable), child_klass: nil) %>">
  <div class="card card-body p-3 bg-light">
    <div>
      <span class="card-title font-weight-light">Associate Existing <%= categorizable %></span>
      <button type="button" class="close float-right close-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-add-render', klass: category, child_klass: klass_name(categorizable)) %>">
      <%= render 'sub_categories/form', fieldable: category, sub_category: SubCategory.new, categorizable: categorizable, form_id: dynamic_id(name: 'form-add', klass: klass_name(categorizable), child_klass: nil) %>
    </div>
  </div>
</div>
