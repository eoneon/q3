<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-new-target', klass: category, child_klass: 'sub_category') %>" data-parent=".<%= dynamic_id(name: 'accordion', klass: category, child_klass: categorizable.downcase) %>">
  <div class="card card-body p-3 bg-light">
    <div>
      <span class="card-title font-weight-light">Associate Existing <%= categorizable %></span>
      <button type="button" class="close float-right close-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-new-render', klass: category, child_klass: 'sub_category') %>">
      <%= render 'sub_categories/form', fieldable: category, sub_category: SubCategory.new %>
    </div>
  </div>
</div>
