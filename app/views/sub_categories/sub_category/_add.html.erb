<div class="card card-body p-3 bg-light">
  <div>
    <span class="card-title font-weight-light">Associate Existing <%= categorizable_type %></span>
    <button type="button" class="close float-right close-form">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div id="<%= dynamic_id(name: 'form-add-render', klass: category, child_klass: klass_name(categorizable_type)) %>">
    <%= render 'sub_categories/form', fieldable: category, sub_category: SubCategory.new, categorizable: categorizable_type, form_id: dynamic_id(name: 'form-add', klass: klass_name(categorizable_type), child_klass: nil) %>
  </div>
</div>
