<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-new-target', klass: category, child_klass: categorizable.downcase) %>" data-parent=".<%= dynamic_id(name: 'accordion', klass: category, child_klass: categorizable.downcase) %>">
  <div class="card card-body p-3 bg-light">
    <div>
      <span class="card-title font-weight-light">Create New <%= categorizable %></span>
      <button type="button" class="close float-right close-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-new-render', klass: category, child_klass: categorizable.downcase) %>">
      <%= render "#{categorizable.downcase.pluralize}/form", category: category, categorizable: Dimension.new %>
    </div>
  </div>
</div>
