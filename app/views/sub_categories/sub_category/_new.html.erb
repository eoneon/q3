<div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-new-target', klass: category, child_klass: klass_name(categorizable)) %>" data-parent="#<%= dynamic_id(name: 'accordion-form-new', klass: klass_name(categorizable), child_klass: nil) %>">
  <div class="card card-body p-3 bg-light">
    <div>
      <span class="card-title font-weight-light">Create New <%= categorizable %></span>
      <button type="button" class="close float-right close-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="<%= dynamic_id(name: 'form-new-render', klass: category, child_klass: klass_name(categorizable)) %>">
      <%= render "sub_categories/categorizable/form", category: category, categorizable: konstant(categorizable).new, form_id: dynamic_id(name: 'form-new', klass: klass_name(categorizable), child_klass: nil) %>
    </div>
  </div>
</div>
