<div class="card card-body p-3 bg-light">
  <div>
    <span class="card-title font-weight-light">Create New <%= categorizable_type %></span>
    <button type="button" class="close float-right close-form">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div id="<%= dynamic_id(name: 'form-new-render', klass: category, child_klass: klass_name(categorizable_type)) %>">
    <%= render "categorizables/forms/form", category: category, categorizable: konstant(categorizable_type).new, form_id: dynamic_id(name: 'form-new', klass: klass_name(categorizable_type), child_klass: nil) %>
  </div>
</div>
