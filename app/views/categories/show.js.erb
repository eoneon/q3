$("#category-show").html("<%= j render 'categories/show', category: @category %>");
$(".toggle-edit-access").prop("disabled", false);
$("#category-toggle").removeClass("disabled").attr("href", "#category-body").attr("aria-expanded", true);
$("#category-body").toggleClass("show")
$("#category-delete-btn").removeClass("disabled").attr("href", "<%= category_path(@category) %>");
$("form[id*='edit']").find("input:text, select, button:submit").prop('disabled', true);
$("input:radio[value='custom']:checked").closest(".col").find("input:text").prop("disabled", false);

$(".new-add-field-toggle").click(function(){
  $("#category-field_group-add, #category-field-new").toggleClass("show");
});

$(".toggle-edit-access").click(function(){
  var form = $(this).closest(".form");
  if ($(form).find("input:text").prop("disabled") == true) {
    $(form).find("input:text, select, button:submit").prop("disabled", false);
  } else {
    $(form).find("input:text, select, button:submit").prop("disabled", true);
  }
});
