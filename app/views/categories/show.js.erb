$("#field-field_group-new-toggle").click(function(){
  if ($(this).text() == "new field") {
    $(this).text("add field");
    $("#category-field_group-add").toggleClass("show");
    $("#category-field-new").toggleClass("show");
  } else {
    $(this).text("new field");
    $("#category-field_group-add").toggleClass("show");
    $("#category-field-new").toggleClass("show");
  }
});

$(".edit-toggle").click(function(){
  var my_form = $(this).closest(".card-header").find("form");
  var my_input = $(my_form).find(".edit-text");
  if ($(my_input).prop("readonly") == true) {
    $(my_input).prop("readonly", false);
  } else {
    $(my_input).prop("readonly", true);
  }
});
