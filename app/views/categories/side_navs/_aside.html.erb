<div class="col-3">
  <div class="list-group" id="list-tab" role="tablist">
    <% categories.each do |category| %>
      <a class="list-group-item list-group-item-action" id="list-<%= category.id %>-list" href="<%= category_path(category) %>" data-remote="true" data-toggle="list">
        <%= category.name %>
      </a>
    <% end %>
  </div>
</div>

<div class="col-9">
  <div id="cat_show">
    <%= render "categories/category", category: @category %>
  </div>
</div>
