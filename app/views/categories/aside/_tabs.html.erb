<% categories.each do |category| %>
  <% if category.sort == 1 %>
    <a class="list-group-item list-group-item-action active" id="list-<%= category.id %>-list" href="<%= category_path(category) %>" data-remote="true" data-toggle="list">
      <%= category.name %>
    </a>
  <% else %>
    <a class="list-group-item list-group-item-action" id="list-<%= category.id %>-list" href="<%= category_path(category) %>" data-remote="true" data-toggle="list">
      <%= category.name %>
    </a>
  <% end %>
<% end %>
