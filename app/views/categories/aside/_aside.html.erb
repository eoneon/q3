<div class="card">
  <div class="card-header py-0">
    <div class="row align-items-center">
      <div class="col">
        Mediums
      </div>

      <div class="col-auto">
        <%= render "categories/aside/nav_menu" %>
      </div>
    </div>
  </div>

  <div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-new-target', klass: 'category', child_klass: nil) %>">
    <%= render "categories/forms/new", category: Category.new %>
  </div>
</div>

<div class="list-group" id="list-tab" role="tablist">
  <%= render "categories/aside/tabs", categories: categories %>
</div>
