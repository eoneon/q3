<div class="card-body bg-light pt-0 pb-3">
  <div>
    <span class="card-title font-weight-light"><small>Edit Category</small></span>
    <button class="close float-right pr-4" type="button" data-toggle="collapse" data-target="#category-edit" aria-expanded="false">
      <span aria-hidden="true"><small>&times;</small></span>
    </button>
  </div>
  <div id="category-edit-form">
    <%= render 'categories/form', category: category, form_id: 'category-edit-form-id' %>
  </div>
</div>
