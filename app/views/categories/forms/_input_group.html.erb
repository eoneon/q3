<div class="input-group input-group-sm">
  <div class="input-group-prepend">
    <button class="btn btn-outline-secondary" type="button" id="<%= new_dom_ref(form_id, 'form', 'btn') %>" disabled><%= dom_attr(form_id, ['new', 'edit'], 'new') %></button></div>
  <%= f.text_field :name, placeholder: dom_attr(form_id, ['enter category name','select a medium from tab panel'], 'new'), class: "form-control edit-text border-secondary", readonly: true %>
  <div class="input-group-append">
    <button class="btn btn-outline-primary" type="submit" disabled>Submit</button>
  </div>
</div>
