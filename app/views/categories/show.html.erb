<h1>Category#Show: <%= @category.name %></h1>
<p><%#= %></p>
<p><%= link_to "Edit: #{@category.name}", edit_category_path(@category) %> | <%= link_to "Return to Category List", categories_path %></p><br>

  <h4>Add category field</h4>
  <div>
    <%= render 'categories/field_form', category: @category %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <th>ID</th>
      <th>field name</th>
      <th>field type</th>
    </thead>
    <tbody>
      <% @category.field_groups.order(:sort).each do |field_group| %>
        <tr>
          <td><%= render 'categories/sorter', category: @category, field_group: field_group %></td>
          <td><%= field_group.field.id %></td>
          <td><%= field_group.field.name %></td>
          <td><%= field_group.field.field_type %></td>
          <td><%= link_to 'Remove', category_field_group_path(@category, field_group.field), method: :delete %></td>
        </tr>
      <% end %>
