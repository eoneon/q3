<div class="row align-items-center justify-content-between bg-light">
  <div class="col-11 pr-0">
    <%= render "categories/forms/form", category: category, url: category_path(category), target: category, obj_ref: obj_ref, form_id: dom_ref(category, 'edit-form') %>
  </div>

  <div class="col-1 pl-0">
    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group align-items-center" role="group">
        <button class="btn bg-transparent text-info control-toggle" id="<%= dom_ref(category, 'control-toggle') %>" data-toggle="collapse" data-target="#<%= dom_ref(category, 'parent-toggle') %>" type="button" aria-expanded="false"><%= (fa_icon "ellipsis-v") %></button>
        <%= button_to category_path(category), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "btn btn-sm bg-transparent font-weight-light text-danger pl-0" do %>
          <span><%= (fa_icon "minus-square") %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="form-row collapse pl-2 align-items-center parent-toggle" id="<%= dom_ref(category, 'parent-toggle') %>">
  <div class="col collapse show btn-group-toggle" id="<%= dom_ref(category, "btn-group-toggle") %>">
    <%#= render "categories/forms/nested_form_toggle", category: category, obj_ref: obj_ref %>
  </div>
  <%#= render "categories/forms/nested_forms", category: category, obj_ref: obj_ref %>
</div>
