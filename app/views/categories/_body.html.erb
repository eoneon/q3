<div class="card card-body p-3">
  <div>
    <%= render "fields/field", fieldable: category %>
  </div>
</div>

<div class="card card-body p-3">
  <div>
    <% category.categorizable_types.each do |categorizable_type| %>
      <span class="collapse dynamic-id"><%= dynamic_id(name: 'collection', klass: category, child_klass: 'field_groups') %></span>
      <%= render "categorizable_types/categorizable_type", category: category, categorizable_type: categorizable_type %>
    <% end %>
  </div>
</div>
