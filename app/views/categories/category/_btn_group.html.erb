<div class="dropdown">
  <button id="category-toggle" type="button" class="btn btn-dark border-left dropdown-toggle disabled" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <small>Category</small>
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" data-toggle="collapse" href="#category-edit">Edit category</a>
    <div class="dropdown-divider"></div>
    <%= link_to 'Delete Category', category,  method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "dropdown-item" %>
  </div>
</div>

<div class="dropdown">
  <button id="category-field-toggle" type="button" class="btn btn-dark border-left font-weight-light dropdown-toggle disabled" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <small>Field</small>
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" data-toggle="collapse" href="#category-field-new">New Field</a>
    <a class="dropdown-item" data-toggle="collapse" href="#category-field-add">Add Field</a>
  </div>
</div>
