<div class="card card-body p-3 bg-light">
  <div>
    <span class="card-title font-weight-light">Edit Category</span>
    <button type="button" class="close float-right close-form">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div id="<%= dynamic_id(name: 'form-edit-render', klass: category, child_klass: nil) %>">
    <%= render 'categories/form', category: category, form_id: dynamic_id(name: 'form-edit', klass: category, child_klass: nil) %>
  </div>
</div>
