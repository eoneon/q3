<h1>Category#index</h1>

<% if @categories.empty? %>
  <p><strong>No Category</strong></p>
<% end %>

<p>
  Download:
  <%= link_to "Export categories to CSV", categories_path(format: "csv") %> |
  <%= link_to "Export categories to Excel", categories_path(format: "xls") %>
</p>

<h4>Import Fields</h4>
<%= form_tag import_categories_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<%= link_to "New Category", new_category_path %>

<table class="table table-striped table-hover">
  <thead>
    <th>ID</th>
    <th>Name</th>
  </thead>
  <tbody>
    <%= render @categories %>
  </tbody>
</table>
