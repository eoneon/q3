<div class="row">
  <div class="col-auto">
    <h1>Art-Categories</h1>
  </div>
  <div class="col-auto offset-md-4 float-right">

    <%= form_tag import_categories_path, multipart: true do %>
      <div class="form">
        <div class="input-group mb-3">
          <div class="input-group-prepend" id="button-addon3">
            <%= file_field_tag :file, class: "form-control" %>
            <button class="btn btn-outline-secondary" type="submit" id="button-addon3">
              Upload
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <div class="float-right">
      <%= link_to "Export to CSV", categories_path(format: "csv") %> |
      <%= link_to "Export to Excel", categories_path(format: "xls") %>
    </div>
  </div>
</div><br>


<table class="table table-striped table-hover">
  <thead>
    <th>
      <div>
        <%= render 'categories/form', fieldable: Category.new %>
      </div>
    </th>
  </thead>
  <tbody>
    <%= render @categories %>
  </tbody>
</table>
