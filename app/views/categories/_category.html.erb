<div id="category-form-group">
  <div id="category-btn">
    <div class="card">

      <div class="card-header bg-secondary">
        <div class="row align-items-center">

          <div class="col">
            <%= render "categories/category_name", category: category %>
          </div>


          <div class="col-auto">
            <div id="category-icon">
              <%= render "categories/toggle_btn", category: category %>
            </div>
          </div>

          <div class="col-auto collapse width" id="category-btn-group">
            <div style= "width:400px;">
              <%= render "categories/toggle_forms/btn_group", fieldable: category %>
            </div>
          </div>

          </div>
        </div>
      </div>
      <div id="category-multi_form">
        <%= render "categories/toggle_forms/multi_form", fieldable: category %>
      </div>
    </div>

    <div class="row">
      <div class="col">

        <div id="category-field_groups">
          <%= render "field_groups/field_group", fieldable: category %>
        </div>
      </div>
    </div>
  </div>
</div>
