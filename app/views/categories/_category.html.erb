<div id="category-form-group">
  <button class="btn btn-block bg-secondary text-left text-white" type="button" data-toggle="collapse" data-target="#category-btn-group" aria-expanded="false">
    <%= category.name %>
  </button>
  <div class="collapse" id="category-btn-group">
    <div class="row">
      <div class="col">
        <%= render "categories/toggle_forms/btn_group", fieldable: category %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= render "categories/toggle_forms/multi_form", fieldable: category %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= render "field_groups/field_group", fieldable: category %>
    </div>
  </div>
</div>
