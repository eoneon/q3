<div class="collapse" id="category-edit" data-parent="#category-multi_form">
  <div class="card card-body p-1 bg-light">
    <div>
      <span class="card-title">Edit Category</span>
      <button type="button" class="close float-right close-category-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= render 'categories/form', fieldable: fieldable %>
  </div>
</div>

<div class="collapse" id="field-new" data-parent="#category-multi_form">
  <div class="card card-body p-1 bg-light">
    <div>
      <span class="card-title">Create New Field</span>
      <button type="button" class="close float-right close-category-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= render 'fields/form', fieldable: fieldable, field: Field.new %>
  </div>
</div>

<div class="collapse" id="field-add" data-parent="#category-multi_form">
  <div class="card card-body p-1 bg-light">
    <div>
      <span class="card-title">Associate Existing Field</span>
      <button type="button" class="close float-right close-category-form">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= render 'field_groups/form', fieldable: fieldable, field_group: FieldGroup.new %>
  </div>
</div>
