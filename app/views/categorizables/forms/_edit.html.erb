<div class="card card-body p-3 bg-light">
  <div>
    <span class="card-title font-weight-light"><%= categorizable_label(sub_category, "Edit") %></span>
    <button type="button" class="close float-right close-form">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div id="<%= dynamic_id(name: 'form-edit-render', klass: sub_category, child_klass: sub_category.categorizable) %>">
    <%= render "categorizables/forms/form", category: category, categorizable: sub_category.categorizable, form_id: dynamic_id(name: 'form-edit', klass: sub_category.categorizable, child_klass: nil) %>
  </div>
</div>
