<div class="row align-items-center justify-content-between bg-light">
  <div class="col-auto border px-0">
    <%= render "item_groups/sort_btn_group", origin: origin, item_group: item_group %>
  </div>
  <div class="col-10 px-0" id="<%= dom_ref(origin, target, 'edit') %>">
    <%#= render "sub_parts/forms/form", target: target, url: product_part_sub_part_path(origin, target), item_group: item_group, form_id: dom_ref(origin, target, 'edit-form-id') %>
    <%= render "product_parts/forms/form", product_part: target, url: product_part_sub_part_path(origin, target), target: item_group, form_id: dom_ref(origin, target, 'edit-form-id') %>
  </div>
  <div class="col-auto px-0">
    <%= button_to product_part_item_group_path(target, item_group), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "btn btn-sm bg-transparent font-weight-light text-danger" do %>
      <span><%= (fa_icon "minus-square") %></span>
    <% end %>
  </div>
</div>
