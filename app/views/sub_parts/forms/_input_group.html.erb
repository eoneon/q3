<div class="input-group input-group-sm align-items-center bg-disabled">
  <%= hidden_field_tag :form_id, form_id %>
  <button class="btn btn-sm rounded-circle bg-transparent toggle-input-access" type="button"><%= (fa_icon "toggle-off") %></button>
  <%= f.select :type, options_for_select(abbrv_sti_sibs(:product_part), selected: target.type), {prompt: "- select product-part type -"}, {class: "form-control border-0", disabled: true} %>
  <%= f.text_field :name, placeholder: "enter #{obj_to_hyph_str(target)} name", class: "form-control border-0 ml-2", disabled: true %>
  <button class="btn btn-sm bg-transparent rounded-circle category-check <%= cond_attr(target.category, true, 'text-success', 'text-secondary') %>" type="button" disabled><%= (fa_icon "check-circle") %></button>
  <button class="btn btn-sm bg-transparent rounded-circle text-primary" type="submit" disabled><%= (fa_icon "plus-circle") %></button>
  <%= f.check_box :category, class: 'form-check-input collapse' %>
</div>
