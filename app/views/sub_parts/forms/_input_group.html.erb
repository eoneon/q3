<div class="input-group input-group-sm align-items-center bg-disabled">
  <button class="btn btn-sm rounded-circle bg-transparent toggle-input-access" type="button"><%= (fa_icon "toggle-off") %></button>
  <div class="col">
    <%= f.text_field :name, placeholder: "enter #{obj_to_hyph_str(target)} name", class: "form-control border-0 pl-0", disabled: true %>
  </div>
  <div class="col-auto">
    <%= f.select :type, options_for_select(abbrv_sti_sibs(:product_part), selected: target.type), {prompt: "- STI type -"}, {class: "form-control border-0 pr-0 ml-r", disabled: true} %>
  </div>
  <div class="input-group-prepend">
    <button class="btn btn-sm bg-transparent border-left category-check <%= cond_attr(target.category, true, 'text-success', 'text-secondary') %>" type="button" disabled><%= (fa_icon "header") %></button>
    <button class="btn btn-sm bg-transparent border-left display-check <%= cond_attr(target.display_name, true, 'text-success', 'text-secondary') %>" type="button" disabled><%= (fa_icon "eye") %></button>
    <button class="btn btn-sm bg-transparent border-left text-primary" type="submit" disabled><%= (fa_icon "plus-circle") %></button>
  </div>
</div>
