<div style="font-size: 0.5rem;"><%= link_to_if element_group.sort.present? && element_group.sort > 1, (fa_icon "chevron-up"), polymorphic_path([elementable, element_group], action: 'sort_up', dom_ref: dom_ref(elementable, 'element_kind-index')), method: :post, remote: true %></div>
<div style="font-size: 0.5rem;"><%= link_to_unless element_group.sort.nil? || elementable.sorted_element_groups.last == element_group, (fa_icon "chevron-down"), polymorphic_path([elementable, element_group], action: 'sort_down', dom_ref: dom_ref(elementable, 'element_kind-index')), method: :post, remote: true %></div>
