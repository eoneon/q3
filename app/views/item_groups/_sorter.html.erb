<div style="font-size: 0.5rem;"><%= link_to_if item_group.sort.present? && item_group.sort > 1, (fa_icon "chevron-up"), polymorphic_path([origin, item_group], action: 'sort_up', dom_ref: dom_ref(origin, 'element_kind-index')), method: :post, remote: true %></div>
<div style="font-size: 0.5rem;"><%= link_to_unless item_group.sort.nil? || origin.grouped_subklass(item_group.target_type).last == item_group, (fa_icon "chevron-down"), polymorphic_path([origin, item_group], action: 'sort_down', dom_ref: dom_ref(origin, 'element_kind-index')), method: :post, remote: true %></div>
