<div id="<%= dynamic_id(name: 'list-item', klass: elementable, child_klass: element_group) %>">
  <span class="collapse dynamic-id"><%= dynamic_id(name: 'list-item', klass: elementable, child_klass: element_group) %></span>
  <div class="card">
    <div class="card-header py-0">
      <%= render "element_groups/header/header", elementable: elementable, element_group: element_group %>
    </div>

    <div class="collapse close-toggle-form" id="<%= dynamic_id(name: 'form-edit-target', klass: elementable, child_klass: element_group.element_kind) %>" data-parent="#accordion-nav-menu">
      <%= render 'element_kinds/forms/edit', elementable: elementable, element_kind: element_group.element_kind %>
    </div>

    <div class="collapse" id="<%= dynamic_id(name: 'collection-target', klass: element_group, child_klass: 'elements') %>" data-parent="#<%= dynamic_id(name: 'collection', klass: elementable, child_klass: 'element_groups') %>">
      <div class="card-body">
        <%= render "elements/container/container", element_kind: element_group.element_kind %>
      </div>
    </div>
  </div>
</div>
