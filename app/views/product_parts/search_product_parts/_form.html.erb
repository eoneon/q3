<%= form_with model: 'product_part', url: search_product_parts_path, method: :get, id: form_id do |f| %>
  <div class="form">
    <%= hidden_field_tag :form_id, form_id %>
    <div class="form-row align-items-center">
      <div class="input-group input-group-sm align-items-center bg-white">
        <%= f.select :type, options_for_select(abbrv_sti_sibs(:product_part)), {prompt: "- select type -"}, {class: "form-control border-0 ml-2 pl-2"} %>
        <%= f.check_box :category, checked: true, class: 'form-check-input' %>
        <button class="btn btn-sm bg-transparent rounded-circle text-primary" type="submit"><%= (fa_icon "plus-circle") %></button>
      </div>
    </div>
  </div>
<% end %>
