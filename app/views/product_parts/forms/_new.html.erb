<%= form_with model: product_part, url: product_part, id: form_id do |f| %>
  <div class="form">
    <%= hidden_field_tag :form_id, form_id %>
    <%= f.check_box :category, checked: true, class: 'form-check-input collapse' %>
    <%= f.check_box :display_name, checked: true, class: 'form-check-input collapse' %>
    <div class="form-row align-items-center">
      <div class="input-group rounded-border mb-1 bg-white">
        <div class="input-group-prepend rounded-left-border">
          <span class="input-group-text rounded-left-border">prd prt</span>
        </div>
          <%= f.text_field :name, placeholder: "enter name", class: "form-control text-input" %>
          <%= f.select :type, options_for_select(abbrv_sti_sibs(:product_part)), {prompt: "-select type-"}, {class: "form-control select-input border-0 ml-0 pl-0 pr-1 mr-1"} %>
        <div class="input-group-append">
          <button class="btn btn-sm btn-outline-primary rounded-right-border border-right-0 border-top-0 border-bottom-0" type="submit" disabled>submit</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
