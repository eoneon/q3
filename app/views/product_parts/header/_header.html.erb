<div class="row justify-content-between align-items-center bg-light">
  <!-- <div class="col-auto">
    <%#= render "item_groups/sorter", product_part: product_part %>
  </div> -->

  <div class="col" id="<%= dom_ref(product_part, 'accordion') %>">
    <div class="collapse show toggle-sibling" id="<%= dom_ref(product_part, 'edit') %>" data-label="Edit <%= obj_to_cap_hyph_str(product_part) %>" data-parent="#<%= dom_ref(product_part, 'accordion') %>">
      <%= render "product_parts/forms/form", product_part: product_part, form_id: dom_ref(product_part, 'edit-form-id') %>
    </div>

    <div class="collapse toggle-sibling" id='<%= dom_ref(product_part, "#{to_snake(product_part.sti_field_type)}-item_group-add") %>' data-label="Add <%= obj_to_cap_hyph_str(product_part.sti_field_type) %>" data-parent="#<%= dom_ref(product_part, 'accordion') %>">
      <%= render 'item_groups/forms/form', origin: product_part, target: to_snake(product_part.sti_field_type), url: product_part_item_groups_path(product_part, ItemGroup.new), form_id: dom_ref(product_part, "#{to_snake(product_part.sti_field_type)}-item_group-add-form-id") %>
    </div>

    <% self_join_assocs(product_part, :product_kind).each do |target| %>
      <div class="collapse toggle-sibling" id='<%= dom_ref(product_part, "#{target}-item_group-add") %>' data-label="Add <%= obj_to_cap_hyph_str(target) %>" data-parent="#<%= dom_ref(product_part, 'accordion') %>">
        <%= render 'item_groups/forms/form', origin: product_part, target: target, url: product_part_item_groups_path(product_part, ItemGroup.new), form_id: dom_ref(product_part, "#{target}-item_group-add-form-id") %>
      </div>
    <% end %>
  </div>
</div>
