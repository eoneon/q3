<div class="row align-items-center justify-content-between bg-light">
  <div class="col-11 pr-0" id="<%= dom_ref(product_part, 'edit') %>">
    <%= render "product_parts/forms/form", product_part: product_part, url: product_part_path(product_part), target: product_part, form_id: dom_ref(product_part, 'edit-form-id') %>
  </div>

  <div class="col-1 pl-0">
    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group align-items-center" role="group">
        <button class="btn bg-transparent text-info toggle-ctrl" data-toggle="collapse" data-target="#<%= dom_ref(product_part, 'toggle-parent') %>" type="button" aria-expanded="false"><%= (fa_icon "ellipsis-v") %></button>
        <%= button_to product_part_path(product_part), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "btn btn-sm bg-transparent font-weight-light text-danger pl-0" do %>
          <span><%= (fa_icon "minus-square") %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="form-row collapse pl-2 align-items-center toggle-parent" id="<%= dom_ref(product_part, 'toggle-parent') %>">
  <div class="col collapse show toggle-btn-group" id="<%= dom_ref(product_part, "toggle-btn-group") %>">
    <%= render "product_parts/forms/nested_form_toggle", product_part: product_part %>
  </div>
  <%= render "product_parts/forms/nested_forms", product_part: product_part %>
</div>
